<!DOCTYPE html>
<html>
<head>


</head>

    <body>

        <style>

            p {
                text-transform: capitalize;
                font-family: 'Times New Roman', Times, serif;
            }

        </style>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        

        <%- include('../partials/recipeDetails.ejs')%>

        <div class="container">
            <h2>My Recipes</h2>
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th scope="col">Recipe ID</th>
                        <th scope="col">  Name</th>
                        <th scope="col">  Type</th>
                        <th scope="col">  Cuisine</th>

                    </tr>
                </thead>

                <tbody>
                    <% rows.forEach(function(r) { %>
                        <tr class="data">
                            <td> <%= r.recipe_id %>   </td>
                            <td> <%= r.recipe_name %>   </td>  
                            <td> <%= r.type %>   </td>
                            <td> <%= r.cuisine %>   </td>
                            <td>
                                <!-- <a href="/make"> -->
                                <button data-recipeId = <%= r.recipe_id %> type="button" class="btn btn-primary recipe-details-button mrdb">Details</button>
                                <!-- </a> -->
                            </td>
                        </tr>

                    <% }); %>



                </tbody>
            </table>
        
        </div>


        <br>
        <br>
        <p class="h1" style="text-align: center;">Delete A Recipe</p>

        <form action="/add/deleteuser_recipe" method="POST">
          <!-- These parameters are for the person database -->
          <div class="form-row" style="padding-bottom: 120px;">
              <div class="form-group col-md-10">
                <label for="recipe_id_delete">ID of the Recipe</label>
                <input type="text" class="form-control" name="recipe_id_delete" id="recipe_id_delete" placeholder="ID of the recipe">
              </div>
          </div>

          <input style="background-color: red; position: relative; left: 15px; top: 20px;" type="submit" class="btn btn-primary btn-lg" name = "sub" value="Delete a Recipe!">


      </form>

      <br>
      <br>
      <a href="/userview" class="btn btn-success btn-lg" style="position: relative; left: 12px;">Go Back Home</a>
      <div id="output"></div>
      <a href="" id = "sourceLink"></a>



    <div class="container">
        <div id = "req_ingredients">
    </div>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script type="text/javascript" src="recipeDetails.js"></script>

    </body>







</html>