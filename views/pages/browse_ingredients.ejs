<!DOCTYPE html>
<html>
<head>
	<title>Browse Ingredients</title>

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

	<link rel='stylesheet' href='./stylesheets/browserecipescss'>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<div class= "col text-center">
    <a href = "/userview" type="button" class="btn btn-primary" style="background-color: darkolivegreen; top: 15px;right: 15px;position: fixed;"> Return Home</a>
  </div>

<body>

    <div class="modal fade" id="add_ingred">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">
						<span>&times;</span>
					</button>
				</div>
				<div class="modal-body">
					<p>Succesfully Added To My Ingredients!</p>
				</div>
			</div>
		</div>
	</div>

	<p class="h1" style="color: darkolivegreen;">Ingredients that are <%= title %></p>

    <div id="tablecontainer">
		<table class="table table-bordered">
			<thead style="border-width: 3px;">
			<tr>
			<th scope="col">ID</th>
			<th scope="col">Name</th>
			<th scope="col">Aisle</th>
			</tr>
		</thead>
			<tbody>
				<% rows.forEach(function(r) { %>
				<tr style="border-width: 1px;">
				<td><%= r.ingredient_id %></td>
				<td><%= r.ingredient_name %></td>
				<td><%= r.aisle %></td>
				<td>
					<div class="input-group mb-3">
						<input id="UserAmount" type="text" class="form-control" placeholder="Amount" aria-label="Amount" aria-describedby="basic-addon2" value="">
						<div class="input-group-append">
						  <button class="btn btn-outline-secondary" type="button" onclick="add_ingredients(id)" id = <%= r.ingredient_id %> data-toggle="modal" data-target="#add_ingred">ADD</button>
						</div>
					</div>
					<!-- <button onclick="add_ingredients(id)" id = <%= r.ingredient_id %> type="button" class="btn btn-primary" data-toggle="modal" data-target="#add_recipe">Add to My Recipes!</button> -->
				</td>
				</tr>
				<% }); %>

			</tbody>
		</table>
	</div>

	<button class="btn btn-primary" id="top" style="background-color: darkolivegreen;bottom: 15px;left: 15px;">Back to Top</button>

	  <script>
		  //Fetch to add ingredient to My Ingredients based on user inputted amount and output table
		function add_ingredients(id){
			var variable = document.getElementById('UserAmount').value;
		  var data = {'id':id, 'amount':variable};
		  fetch("/browse/addingredients", {
			method: 'post',
			headers: {'Content-Type': 'application/json'},
			body: JSON.stringify(data)

		  })
		  .then(function(res){
			return res.json()

		  })


		}

		$(document).ready(function () {
			$('#top').click(function () {
			$("html, body").animate({
				scrollTop: 0
			}, 100);
				return false;
			});
			});
	  </script>

    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
    <script type="text/javascript" src='/browserecipes.js'></script>


</body>
</html>
