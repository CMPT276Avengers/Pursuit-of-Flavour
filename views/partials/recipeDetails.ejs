<link rel="stylesheet" type="text/css" href="/stylesheets/recipeDetails.css">

<!-- Modal -->
<div class="modal fade" id="recipeModal" role="dialog">
    <div class="modal-dialog modal-lg">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header" style="background-color: darkolivegreen;">
                <h2 class="modal-title" style="font-weight: bold; color: white;"></h2>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <!--beginning of image and general info container-->
                    <div class="row justify-content-center mb-5">
                        <div class="col-7 recipe-image">
                        </div>

                        <div class="col-4 justify-content-center text-center general-information">
                            <img src="../../images/recipeDetails/grease.png" class = "img-responsive rounded" width="60%">
                            <div class="row justify-content-center mb-3">
                                <div class="col-4 justify-content-center text-center">
                                    <li>Cost:</li>
                                    <li>Time:</li>
                                    <li>Servings:</li>
                                </div>
                                <div class="col-4 justify-content-center text-center general-info-details">
                                </div>
                            </div>
                            <div style="text-decoration: underline; font-weight: bold;">
                                Additional Information
                            </div>
                            <div class="additional-info justify-content-center overflow-auto">
                            </div>

                        </div>
                    </div>
                    <!--end of image and general info container-->

                    <!--beginning of ingredeints container-->
                    <div class="row justify-content-center mb-5">
                        <div class="col-11 justify-content-center text-center ingredeints-col">
                            <div class="text-center mb-5"style="text-decoration: underline; font-weight: bold; font-size: xx-large;">
                                Ingredients
                            </div>
                            <ul class="list-group ingredients-container">
                            </ul>
                        </div>
                    </div>
                    <!--end of ingredeints container-->

                    <!--beginning of instructions container-->
                    <div class="row justify-content-center">
                        <div class="col-11 justify-content-center text-center">
                            <div class="text-center mb-5"style="text-decoration: underline; font-weight: bold; font-size: xx-large;">
                                Instructions
                            </div>

                            <div class="instructions-container">
                            </div>
                        </div>
                    </div>
                    <!--end of instructions container-->


                </div>

                <div class="alert alert-success" role = "alert" id="added-alert">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <strong>Success! </strong> You have added this recipe to your collection.
                </div>


                <div class="alert alert-danger" role = "alert" id="failed-alert">
                    <button type="button" class="close" data-dismiss="alert">x</button>
                    <strong>Oh no! </strong> It seems like you already have this recipe in your collection.
                </div>
            </div>



            <div class="modal-footer" style="background-color: darkolivegreen;">
                <button type="button" class="btn btn-success save-recipe-button" data-recipeId = "">Save to my recipes</button>
                <button type="button" class="btn btn-success">Make!</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

